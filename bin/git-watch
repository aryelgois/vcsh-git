#!/bin/sh
# Watch your commit history in the terminal
#   $1 Update interval in seconds (default: 4)
#
# It also includes the HEAD commit
#
# See git-lg in https://github.com/aryelgois/vcsh-git
# See git-colored in https://gist.github.com/aryelgois/c413ca5bf7bb9341c3c9181d492217d6

exec watch -c -n ${1:-4} 'git colored log -1; echo; git colored lg'
